<h1 class="roboto" style="margin-top: 50px; margin-bottom: 30px">Users</h1>

<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Delete User</th>
    </tr>
  </thead>
  <tbody>
    {{#each userAccounts as |user index|}}
      <tr>
        <th scope="row">{{index}}</th>
        <td>{{user.username}}</td>
        <td>{{user.firstName}}</td>
        <td>{{user.lastName}}</td>
        <td><button {{action "deleteUser" index}} style="margin-top: 10px;" type="submit" class="btn btn-danger">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>
