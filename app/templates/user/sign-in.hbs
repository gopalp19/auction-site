<h1 style="margin-top: 50px; margin-bottom: 30px">Sign In</h1>


{{#if session.isAuthenticated}}
  <label>Already Logged in!</label>
  <button style="margin-top: 10px;" type="submit" class="btn btn-primary" {{action "logOutHandler"}}>Logout</button>
{{else}}
  <form>
    <div class="form-group">
      <label>User ID</label>
      {{input value=userId type="email" placeholder="User ID" class="form-control"}}
    </div>
    <div class="form-group">
      <label>Password</label>
      {{input type="password" value=userPassword placeholder="Password" class="form-control"}}
    </div>


    {{#if isErrorsVisible}}
      <div class="alert alert-danger" role="alert">
        <strong>Error!</strong> Invalid credentials, please try again.
      </div><br>
    {{/if}}

    <button style="margin-top: 10px;" type="submit" class="btn btn-primary" {{action "logInHandler"}}>Log in</button>
  </form>
{{/if}}
