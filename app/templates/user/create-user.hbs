<h1 class="roboto" style="margin-top: 50px; margin-bottom: 30px">Create New Account</h1>

{{#if session.isAuthenticated}}
  <label>User already logged in! Please logout first to create a new user</label><br>
  <button style="margin-top: 10px;" type="submit" class="btn btn-primary" {{action "logOutHandler"}}>Logout</button>
{{else}}
  <form {{action "submitUserForm" on="submit"}}>

    {{#if errorMessage}}
      <div class="alert alert-danger" role="alert">
        <strong>Error! </strong>{{errorMessage}}
      </div>
    {{/if}}

    <div class="form-group">
      <label class="registration-label">First Name</label>
      {{input value=firstName placeholder="First name" class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label class="registration-label">Last Name</label>
      {{input value=lastName placeholder="Last name" class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label class="registration-label">User Name</label>
      {{input value=userId placeholder="User Name" class="form-control"}}
    </div>
    <div class="form-group">
      <label class="registration-label">Password</label>
      {{input value=userPassword type="password" placeholder="Password" class="form-control"}}
    </div>

    <div class="form-group">
      <label class="registration-label">Email address</label>
      {{input value=emailAddress type="email" placeholder="Username" class="form-control"}}
    </div>

    <div class="form-group">
      <label class="registration-label">Shipping address</label>
      {{input value=streetAddress placeholder="Street Address" class="form-control"}}
      {{input value=apartmentNumber placeholder="Apartment, Suite, Bldg. (Optional)" class="form-control"}}
      {{input value=zipCode placeholder="Zip Code" class="form-control"}}
      <label>United States</label>
    </div>

    <div class="form-check">
      <label class="form-check-label">
      {{input type="checkbox" class="form-check-input" checked=canBuy}} Ability to buy</label><br>
      <label class="form-check-label">
      {{input type="checkbox" class="form-check-input" checked=canSell}} Ability to sell</label>
    </div>

    <button style="margin-top: 10px;" type="submit" class="btn btn-primary">Submit</button>
  </form>
{{/if}}
