<div class="form-group">
  <label class="registration-label">First Name</label>
  {{input value=userData.firstName placeholder="First name" class="form-control" required="required" readonly=readonly}}
</div>
<div class="form-group">
  <label class="registration-label">Last Name</label>
  {{input value=userData.lastName placeholder="Last name" class="form-control" required="required" readonly=readonly}}
</div>
<div class="form-group">
  <label class="registration-label">User Name</label>
  {{input value=userData.username placeholder="User Name" class="form-control" readonly=specialReadonly}}
</div>
<div class="form-group">
  <label class="registration-label">Password</label>
  {{input value=userData.password type="password" placeholder="Password" class="form-control" readonly=readonly}}
</div>

<div class="form-group">
  <label class="registration-label">Email address</label>
  {{input value=userData.email type="email" placeholder="Username" class="form-control" readonly=readonly}}
</div>

<div class="form-group">
  <label class="registration-label">Shipping address</label>
  {{textarea value=userData.billTo placeholder="Enter full address" class="form-control" readonly=readonly rows="4"}}
</div>

<div class="form-check">
  <label class="form-check-label">
  {{input type="checkbox" class="form-check-input" checked=userData.canBuy disabled=readonly}} Ability to buy</label><br>
  <label class="form-check-label">
  {{input type="checkbox" class="form-check-input" checked=userData.canSell disabled=readonly}} Ability to sell</label>
</div>
